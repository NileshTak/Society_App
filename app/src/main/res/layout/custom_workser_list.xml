<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

    <com.ramotion.foldingcell.FoldingCell
            android:id="@+id/folding_cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/cell_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/constraint_layout">
                    <ImageView
                        android:id="@+id/cover"
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/cover" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/photo"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_marginEnd="8dp"
                        app:civ_border_color="@android:color/white"
                        app:civ_border_width="2dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="38dp"
                        app:srcCompat="@drawable/photo" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="170dp"
                        android:textSize="20dp"
                        android:layout_marginTop="100dp"
                        android:text="13K"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="160dp"
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/textView"
                        android:text="Followers" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textSize="20dp"
                        android:layout_toRightOf="@id/textView"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="100dp"
                        android:text="400"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@id/textView2"
                        android:layout_below="@id/textView3"
                        android:text="following" />

                    <TextView
                        android:id="@+id/txt_bio"
                        android:layout_below="@id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:padding="16dp"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur." />
                </RelativeLayout>


            </FrameLayout>

            <FrameLayout
                android:id="@+id/cell_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:layout_marginBottom="-5dp"
                    android:background="@drawable/cardbg">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/custom_prof_worker"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_user_nav"
                        android:layout_marginStart="10dp"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/custom_name_worker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="7dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="25dp"
                        android:layout_toRightOf="@id/custom_prof_worker"
                        android:text="Item - 1"
                        android:textSize="20dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/custom_type_worker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/custom_name_worker"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:textSize="18dp"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/custom_prof_worker"
                        android:text="Description"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                    <TextView
                        android:id="@+id/custom_ratingtext_worker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/custom_type_worker"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="25dp"
                        android:layout_toRightOf="@id/custom_prof_worker"
                        android:background="@color/colorPrimary"
                        android:paddingLeft="15dp"
                        android:layout_marginStart="5dp"
                        android:paddingRight="15dp"
                        android:text="Rating 4.5/5.0"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/custom_callingbtn_worker"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="39dp"
                        android:background="@drawable/ic_call_blue_24dp"
                        android:padding="7dp" />

                </RelativeLayout>

            </FrameLayout>

        </com.ramotion.foldingcell.FoldingCell>

    </LinearLayout>

    </androidx.cardview.widget.CardView>