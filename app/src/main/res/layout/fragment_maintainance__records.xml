<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_blue_800"
    tools:context=".Maintainance_Records">

  <LinearLayout
      android:orientation="horizontal"
      android:layout_margin="8dp"
      android:padding="5dp"
      android:background="@drawable/recordlinearbg"
      android:weightSum="2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <EditText
          android:id="@+id/date_maintain_records"
          android:layout_width="100dp"
          android:textAlignment="center"
          android:layout_weight="1"
          android:textSize="20dp"
          android:layout_height="wrap_content" />

      <Spinner
          android:id="@+id/spinner_paidornotpaid"
          android:layout_width="120dp"
          android:layout_weight="2"
          android:textAlignment="center"
          android:layout_height="30dp">
      </Spinner>

  </LinearLayout>

    <com.diegodobelo.expandingview.ExpandingList
        android:id="@+id/expanding_list_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>