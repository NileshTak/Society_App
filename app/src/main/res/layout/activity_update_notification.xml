<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/md_white_1000"
    android:layout_height="match_parent"
    tools:context=".UpdateNotification">

    <EditText
        android:id="@+id/text_notification"
        android:layout_width="match_parent"
        android:textSize="22dp"
        android:maxLines="10"
        android:hint="Enter Notification"
        android:textColor="@color/md_black_1000"
        android:layout_margin="8dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/pic_notification"
        android:src="@drawable/vlog"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="180dp"
        android:layout_height="180dp" />

    <ImageView
        android:layout_below="@id/text_notification"
        android:id="@+id/circular_notification_pic"
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/btn_update_notifi"
        android:layout_width="match_parent"
        android:background="@drawable/button_main_background"
        android:layout_alignParentBottom="true"
        android:text="Update"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_height="wrap_content" />

</RelativeLayout>