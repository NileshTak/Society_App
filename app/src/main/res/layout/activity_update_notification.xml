<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateNotification">

    <androidx.cardview.widget.CardView
        android:id="@+id/img_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/pic_notification"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_add_to_photos_black_24dp"
                android:gravity="center_vertical"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/circular_notification_pic"
                android:layout_width="360dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:layout_height="300dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <EditText
        android:id="@+id/text_notification"
        android:layout_width="match_parent"
        android:layout_below="@+id/img_layout"
        android:textSize="22dp"
        android:maxLines="10"
        android:hint="Enter Notification"
        android:textColor="@color/md_black_1000"
        android:layout_margin="8dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_update_notifi"
        android:text="Update"
        android:textSize="20dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/md_purple_500"
        android:textColor="@color/md_white_1000"
        android:layout_below="@id/text_notification"
        android:layout_width="200dp"
        android:layout_marginStart="100dp"
        android:layout_height="wrap_content" />

</RelativeLayout>