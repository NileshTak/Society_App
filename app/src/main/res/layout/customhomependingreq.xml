<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <LinearLayout
            android:background="@drawable/usereqstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rel_2"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cutom_userreq_flatno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flat No"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="15dp"
                    android:textAlignment="center"
                    android:paddingBottom="5dp"
                    android:background="@color/md_blue_custom"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cutom_userreq_relation"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/cutom_userreq_flatno"
                    android:layout_height="wrap_content"
                    android:text="Relation"
                    android:paddingBottom="15dp"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="5dp"
                    android:background="@color/md_blue_custom"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:textSize="22dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:background="@color/md_white_1000"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cutom_userreq_name"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/md_white_1000"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/black"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/cutom_userreq_number"
                    android:layout_below="@+id/cutom_userreq_name"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content"
                    android:text="+918446613467"
                    android:layout_marginTop="5dp"
                     android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:background="@color/md_white_1000"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/black"
                    android:textSize="22dp" />

            </RelativeLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>